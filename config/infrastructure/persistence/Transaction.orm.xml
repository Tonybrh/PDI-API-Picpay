<?xml version="1.0" encoding="UTF-8"?>
<doctrine-mapping xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping"
                  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                  xsi:schemaLocation="http://doctrine-project.org/schemas/orm/doctrine-mapping
                  https://doctrine-project.org/schemas/orm/doctrine-mapping.xsd">

    <entity name="App\Domain\Entity\Transaction" table="transaction" schema="public">
        <id name="id" type="integer" column="nu_seq_transaction">
            <generator strategy="AUTO"/>
        </id>
        <field name="value" type="decimal" column="valor" scale="2" precision="10"/>
        <field name="createdAt" type="datetime" column="created_at"/>
        <field name="updatedAt" type="datetime" column="updated_at"/>
        <field name="status" type="string" column="status" length="20"/>

        <many-to-one field="senderId" target-entity="App\Domain\Entity\User">
            <join-column name="nu_seq_user_sender" referenced-column-name="nu_seq_user"/>
        </many-to-one>

        <many-to-one field="receiverId" target-entity="App\Domain\Entity\User">
            <join-column name="nu_seq_user_receiver" referenced-column-name="nu_seq_user"/>
        </many-to-one>
    </entity>
</doctrine-mapping>
